<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24px"
    tools:ignore="PxUsage">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_weight="5">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:layout_marginEnd="2px"
                android:paddingTop="4px"
                android:paddingBottom="4px"
                android:paddingStart="8px"
                android:paddingLeft="8px"
                android:paddingEnd="8px"
                android:paddingRight="8px"
                android:background="#F3F9FF"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6C7076"
                    android:textSize="8px"
                    android:textAllCaps="true"
                    android:text="Order ID"/>

                <TextView
                    android:id="@+id/tvOrderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="14px"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    tools:text="Mas Eka Setiawan"/>

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_weight="5">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginEnd="2px"
                android:paddingTop="4px"
                android:paddingBottom="4px"
                android:paddingStart="8px"
                android:paddingLeft="8px"
                android:paddingEnd="8px"
                android:paddingRight="8px"
                android:background="#F3F9FF"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6C7076"
                    android:textSize="8px"
                    android:textAllCaps="true"
                    android:text="Merchant"/>

                <TextView
                    android:id="@+id/tvMerchantName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="14px"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    tools:text="Mas Eka Setiawan"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_marginEnd="2px"
                android:paddingTop="4px"
                android:paddingBottom="4px"
                android:paddingStart="8px"
                android:paddingLeft="8px"
                android:paddingEnd="8px"
                android:paddingRight="8px"
                android:background="#F3F9FF"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6C7076"
                    android:textSize="8px"
                    android:textAllCaps="true"
                    android:text="Address"/>

                <TextView
                    android:id="@+id/tvMerchantAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="14px"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    tools:text="Mas Eka Setiawan"/>

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_weight="5">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginEnd="2px"
                android:paddingTop="4px"
                android:paddingBottom="4px"
                android:paddingStart="8px"
                android:paddingLeft="8px"
                android:paddingEnd="8px"
                android:paddingRight="8px"
                android:background="#F3F9FF"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6C7076"
                    android:textSize="8px"
                    android:textAllCaps="true"
                    android:text="Customer"/>

                <TextView
                    android:id="@+id/tvCustomerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="14px"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    tools:text="Mas Eka Setiawan"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_marginEnd="2px"
                android:paddingTop="4px"
                android:paddingBottom="4px"
                android:paddingStart="8px"
                android:paddingLeft="8px"
                android:paddingEnd="8px"
                android:paddingRight="8px"
                android:background="#F3F9FF"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6C7076"
                    android:textSize="8px"
                    android:textAllCaps="true"
                    android:text="Address"/>

                <TextView
                    android:id="@+id/tvCustomerAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="14px"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    tools:text="Mas Eka Setiawan"/>

            </LinearLayout>
        </TableRow>

    </TableLayout>

</LinearLayout>